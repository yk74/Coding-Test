##1. 더 맵게

from heapq import *
def solution(scoville, K):
    answer = 0
    heapify(scoville)
    while scoville[0] < K and len(scoville) > 1:
        s1 = heappop(scoville)
        s2 = heappop(scoville)
        heappush(scoville, s1+2*s2)
        answer += 1
    if sorted(scoville)[0] >= K:
        return answer        
    else:
        answer = -1
        return answer
                
        
풀이과정2       
def solution(scoville, K):
    answer = 0
    while (scoville[0] < K):
        x = scoville[0] + 2*scoville[1]
        scoville.pop(0)
        scoville[0] = x
        scoville.sort()
        answer += 1                   
    if scoville[0] < K:
        answer = -1   
    return answer
